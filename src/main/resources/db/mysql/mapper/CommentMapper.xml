<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.community.dao.mapper.CommentMapper">

    <sql id="columns">
        id,user_id,type,biz_id,comment_time,status,top,content,like_num,reply_num,is_delete,create_user_id,create_time,update_user_id,update_time,sys_version
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comment (
        user_id,
        type,
        biz_id,
        comment_time,
        status,
        top,
        content,
        like_num,
        reply_num,
        is_delete,
        create_user_id,
        create_time,
        update_user_id,
        update_time,
        sys_version
        ) VALUES (
        #{userId},
        #{type},
        #{bizId},
        #{commentTime},
        #{status},
        #{top},
        #{content},
        #{likeNum},
        #{replyNum},
        0,
        #{createUserId},
        now(),
        #{updateUserId},
        now(),
        1
        )
    </insert>

    <insert id="insertSelective" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comment (
        <if test="@Ognl@isNotEmpty(userId)">
            user_id,
        </if>
        <if test="@Ognl@isNotEmpty(type)">
            type,
        </if>
        <if test="@Ognl@isNotEmpty(bizId)">
            biz_id,
        </if>
